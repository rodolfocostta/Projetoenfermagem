@model EnfermariaSenac.Models.Paciente

@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar</h1>

<h4>Paciente</h4>
<hr />
<div class="row">
    <div class="col-md-4 mx-auto">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID_Paciente" />
            <div class="form-group">
                <label asp-for="Nome_Paciente" class="control-label"></label>
                <input asp-for="Nome_Paciente" class="form-control" />
                <span asp-validation-for="Nome_Paciente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Idade" class="control-label"></label>
                <input asp-for="Idade" class="form-control" />
                <span asp-validation-for="Idade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data_Nasc" class="control-label"></label>
                <input asp-for="Data_Nasc" class="form-control" />
                <span asp-validation-for="Data_Nasc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Alergico" class="control-label"></label>
                <input asp-for="Alergico" class="form-control" />
                <span asp-validation-for="Alergico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
